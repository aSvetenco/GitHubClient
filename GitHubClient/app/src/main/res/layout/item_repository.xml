<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/repo_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_all_20sp"/>

    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_all_15sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/language"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_ball"
            android:drawablePadding="@dimen/spacing_all_5dp"
            android:drawableStart="@drawable/ic_ball"
            android:textSize="@dimen/text_all_13sp"
            />

        <TextView
            android:id="@+id/stargazers_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_star"
            android:drawablePadding="@dimen/spacing_all_5dp"
            android:drawableStart="@drawable/ic_star"
            android:textSize="@dimen/text_all_13sp"/>


        <TextView
            android:id="@+id/forks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_fork"
            android:drawablePadding="@dimen/spacing_all_5dp"
            android:drawableStart="@drawable/ic_fork"
            android:textSize="@dimen/text_all_13sp"/>

        <TextView
            android:id="@+id/license"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_libra"
            android:drawablePadding="@dimen/spacing_all_5dp"
            android:drawableStart="@drawable/ic_libra"
            android:textSize="@dimen/text_all_13sp"/>
    </LinearLayout>


</LinearLayout>