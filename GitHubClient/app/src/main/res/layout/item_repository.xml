<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/spacing_all_7dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:elevation="0dp"
        android:padding="@dimen/spacing_all_5dp">

        <TextView
            android:id="@+id/repo_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_all_22sp" />

        <TextView
            android:id="@+id/description"
            android:layout_marginTop="@dimen/spacing_all_10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_all_15sp"
            android:visibility="gone" />

        <LinearLayout
            android:layout_marginTop="@dimen/spacing_all_10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/language"
                style="@style/TextViewRepoItemStyle"
                android:drawableLeft="@drawable/ic_ball"
                android:drawableStart="@drawable/ic_ball" />

            <TextView
                android:id="@+id/stargazers_count"
                style="@style/TextViewRepoItemStyle"
                android:drawableLeft="@drawable/ic_star"
                android:drawableStart="@drawable/ic_star" />

            <TextView
                android:id="@+id/forks"
                style="@style/TextViewRepoItemStyle"
                android:drawableLeft="@drawable/ic_fork"
                android:drawableStart="@drawable/ic_fork" />

            <TextView
                android:id="@+id/license"
                style="@style/TextViewRepoItemStyle"
                android:drawableLeft="@drawable/ic_libra"
                android:drawableStart="@drawable/ic_libra" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>