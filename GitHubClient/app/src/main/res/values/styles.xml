<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="SearchBarStyle" parent="Widget.AppCompat.SearchView">
        <item name="queryBackground">@color/colorDefaultWhite</item>
        <item name="android:textSize">@dimen/text_all_13sp</item>
        <item name="queryHint">@string/search_view_hint</item>

    </style>

    <style name="TextViewUserDataStyle" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/text_all_10sp</item>
        <item name="android:textSize">@dimen/text_all_15sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="TextViewRepoItemStyle" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/spacing_all_10dp</item>
        <item name="android:drawablePadding">@dimen/spacing_all_5dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/text_all_13sp</item>
        <item name="android:visibility">gone</item>
        <item name="textAllCaps">false</item>
    </style>
</resources>
