<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="SearchBarStyle" parent="Widget.AppCompat.SearchView">
        <item name="queryBackground">@color/colorDefaultWhite</item>
        <item name="android:textSize">@dimen/text_all_13sp</item>
        <item name="queryHint">@string/search_view_hint</item>

    </style>



</resources>
